								"type": "text"
							},
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"from\": {\n        \"phoneNumber\": \"{{from_number}}\"\n    },\n    \"to\": [\n        {\n            \"phoneNumber\": \"{{to_number}}\"\n        }\n    ],\n    \"text\": \"Hello World SMS from RC number\"\n}\n"
